{{ticket-show ticket=ticket}}

<form class="list-filter" {{action "save" ticket on="submit"}}>
  <br>
  {{textarea rows=7 cols=70 value=ticket.description placeholder="Write your answer here"}}
  <br>
  <button type="submit" class="button">Submit</button>
</form>

{{#if errorMessage}}
  {{errorMessage}}
{{/if}}
