<form class="list-filter" {{action "save" ticket on="submit"}}>
  <br>
  {{input value=ticket.title class="form-control" placeholder="How can we help you?"}}
  <br>
  {{textarea rows=7 cols=70 value=ticket.description placeholder="Please describe your issue"}}
  <br>
  <button type="submit" class="button">Submit</button>
</form>

{{#if errorMessage}}
  {{errorMessage}}
{{/if}}
