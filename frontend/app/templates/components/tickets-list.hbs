{{#if model}}
  {{#each tickets as |ticket|}}
    <article class="listing" {{action 'toggleStatus' ticket}}>
      <h3>{{ticket.title}}</h3>
      <div class="detail">
        {{ticket.description}}
      </div>
      <div class="detail">
        Status: {{ticket.status}}
      </div>
    </article>
  {{/each}}
{{else}}
  <article class="listing">
    <h3>No tickets</h3>
    <div class="detail">
      {{#link-to 'app.tickets.new' class="button"}}
        Create a new ticket
      {{/link-to}}
    </div>
  </article>
{{/if}}
